  "energy_optimization": {
    "ml_model": {
      "type": "energy_saving_lighting_control",
      "objective": "minimize_lighting_energy_consumption",
      "algorithm": "RandomForest",
      "dataset": "Real_Smart_Home_Energy_Dataset_Kaggle",
      "accuracy": "100%",
      "energy_reduction": "45.4%"
    },
    "ambient_light_optimization": {
      "enabled": true,
      "threshold": "65_lux",
      "target": "70_lux",
      "energy_saving": "0.1_kWh_per_override"
    }
  },

  "user_interface": {
